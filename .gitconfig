[user]
	email = cgreen@saguaro.space
	name = Christopher Green
[alias]
	# Fancier git log
	graph = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s -%C(reset) %C(dim magenta)%an%C(reset)%C(bold yellow)%d%C(reset)' --all
	
	# Show the last ten tags
	ten = tag --sort version:refname -n10 -n
	
	# List all remote branches
	remotes = ls-remote --heads
[github]
	user = cg433n
[pull]
	# Only update to the new history if there is no divergent local history.
	ff = only
[init]
	# `main` should be the default branch (rather than `master`)
	defaultBranch = main
[diff]
	tool = vimdiff
