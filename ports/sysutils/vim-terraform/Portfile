destroot {
    set dest_dir ${destroot}${prefix}/share/vim/pack/macports/start/vim-solarized8
    xinstall -d ${dest_dir}
    foreach f [glob -directory ${worksrcpath} -nocomplain *] {
		file copy -force $f ${dest_dir}
	}
}