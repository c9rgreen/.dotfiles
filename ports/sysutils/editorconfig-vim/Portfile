github.setup        editorconfig editorconfig-vim v1.1.1

categories          sysutils
platforms           darwin
supported_archs     noarch
license             MIT

maintainers         cgreen@saguaro.space
description         Editorconfig for Vim

checksums           rmd160  a90c319139efdcb59e914a7791bea18a5ba8cc4b \
                    sha256  988950c5a03c63b6ebe9f21b5ddbc8a97f40f639c83579e994ef34ee2d186bdd \
                    size    33277

use_configure       no

build {}

destroot {
    set dest_dir ${destroot}${prefix}/share/vim/pack/macports/start/editorconfig-vim
    xinstall -d ${dest_dir}
    foreach f [glob -directory ${worksrcpath} -nocomplain *] {
		file copy -force $f ${dest_dir}
	}
}