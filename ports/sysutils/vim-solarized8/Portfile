PortSystem          1.0
PortGroup           github 1.0

github.setup        lifepillar vim-solarized8 v1.4.0

categories          sysutils
platforms           darwin
supported_archs     noarch
license             MIT

maintainers         cgreen@saguaro.space
description         Solarized colorscheme for vim

checksums           rmd160  07c317845717840e3a7514ea16adde3efa37a547 \
                    sha256  05c477fb6102408835ca4f2a58e5c8370b822a86e33fb4959b59eb03b279a529 \
                    size    54518

use_configure       no

build {}

destroot {
    set dest_dir ${destroot}${prefix}/share/vim/pack/macports/start/vim-solarized8
    xinstall -d ${dest_dir}
    foreach f [glob -directory ${worksrcpath} -nocomplain *] {
		file copy -force $f ${dest_dir}
	}
}