checksums           rmd160  a3d900a9f3e57fd104a332e33c17d1023cceeb51 \
                    sha256  829c9cb0dfad19f380ea740bfcbd725af5cc089abd926259fe0b5802e1c4cd74 \
                    size    84298

use_configure       no

build {}

destroot {
    set dest_dir ${destroot}${prefix}/share/vim/pack/macports/start/vim-fugitive
    xinstall -d ${dest_dir}
    foreach f [glob -directory ${worksrcpath} -nocomplain *] {
		file copy -force $f ${dest_dir}
	}
}
